rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // rooms collection: messages stored under rooms/{roomId}/messages/{messageId}
    match /rooms/{roomId}/messages/{messageId} {
      allow read: if true;
      // writing allowed for authenticated users or limited anonymous clients with rate limiting (simplified)
      allow create: if request.auth != null || (request.time < timestamp.date(2100,1,1) && request.resource.data.keys().hasAll(['author','text','createdAt']));
      allow delete, update: if false; // require admin function for edits/deletes
    }

    // basic users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // fallback deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
